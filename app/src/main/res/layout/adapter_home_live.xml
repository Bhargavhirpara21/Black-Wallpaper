<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:id="@+id/rl_main"
    android:layout_height="wrap_content"
    android:background="@color/background_clr">

    <androidx.cardview.widget.CardView android:id="@+id/item_stock_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="0dp"
        android:foreground="@drawable/round_cardviewdrawable"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/stock_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_play_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_play"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>

</FrameLayout>